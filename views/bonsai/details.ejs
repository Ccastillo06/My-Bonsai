<div id="details" class="col-xs-10 col-xs-offset-1">
  <div class="container photomaintenance col-sm-5 col-xs-12">
    <% if(bonsai.photo == 'bonsaiFiller.png'){ %>
      <img src="/images/<%=bonsai.photo%>" alt="user-bonsai-photo">
    <%} else {%>
      <img src="/uploads/<%=bonsai.photo%>" alt="user-bonsai-photo">
    <% } %>
      <a href="/bonsai/maintenance/<%=bonsai._id%>"><button id="detailbutton" class="btn btn-lg btn-success">Add new maintenance</button></a>
  </div>

  <div class="container detailtext col-sm-6 col-sm-offset-1 col-xs-12">
    <p><b>Name: </b> <%= bonsai.name%></p><br>
    <p><b>Specie: </b> <%= bonsai.species%></p><br>
    <p><b>Scientific-Name: </b> <%= bonsai.scientific_name%></p><br>
    <p><b>Age: </b> <%= bonsai.age%></p><br>
    <p><b>Description: </b> <%= bonsai.description%></p><br>
    <p><b>Weather: </b> <%= bonsai.weather%></p><br>
    <p><b>Temperature: </b> <%= bonsai.temperature%></p><br>
    <p><b>Watering: </b> <%= bonsai.watering%></p><br>
    <p><b>Substratum: </b> <%= bonsai.substratum%></p><br>
  </div>

  <div class="container">
    <h2>Maintenances:</h2>
    <% bonsai.maintenances.forEach( maintenance => { %>
      <p><b><%= maintenance.date.toString().substring(4, 15)%> - <%= maintenance.type%></b></p>
      <% if(maintenance.photo == 'workFiller.png'){ %>
        <img src="/images/<%=maintenance.photo%>" alt="user-bonsai-photo">
      <%} else {%>
        <img src="/uploads/<%=maintenance.photo%>" alt="user-bonsai-photo">
      <% } %>
      <p><b><%= maintenance.description%></b></p>
      <% if(maintenance.periodicity == 0){ %>
        <p>Repeat this work when your little tree needs it</p>
      <%} else {%>
        <p>Repeat this work in: <%= maintenance.periodicity%> months</p>
      <% } %>
    <% }); %>
  </div>

</div>
