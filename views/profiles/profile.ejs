<div class="profile">
  <div class="container">
      <div class="col-lg-12">
        <div class="card hovercard">
          <div class="cardheader"></div>
          <div class="avatar">
            <% if(user.photo == 'logo.png'){ %>
              <img class="" src="/images/<%=user.photo%>" alt="profile-photo">
            <%} else {%>
              <img class="" src="/uploads/<%=user.photo%>" alt="profile-photo">
            <% } %>
          </div>
          <div class="info">
            <div class="title">
              <p><%= user.name %></p>
            </div>
            <div class="desc"><%= user.location.city %></div>
          </div>
          <div class="bottom">
            <a href="/profile/edit"><button class="btn btn-lg btn-link">Edit Profile</button></a>
            <a href="/bonsai/new"><button class="btn btn-lg btn-link">Add Bonsai</button></a>
          </div>
        </div>
      </div>
  </div>
</div>


<h2 class ="text-center">Recommended Bonsais in your Area</h2>
<br>
<div class="slider">
  <% species.forEach(e => { %>
  <figure class="slider__item"><img class="slider__image" src="/images/bonsais-species/<%=e.photo%>"/>
    <figcaption class="slider__caption"><%= e.scientific_name%></figcaption>
  </figure>
  <% }); %>
</div>
<div class="slider__btn"></div>
<br><br>
