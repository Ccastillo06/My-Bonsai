<h1>Hello <%= user.name %></h1>
<% if(user.photo == 'logo.png'){ %>
  <img src="/images/<%=user.photo%>" alt="profile-photo" height="300px">
<%} else {%>
  <img src="/uploads/<%=user.photo%>" alt="profile-photo" height="300px">
<% } %>
<%= user.location.city %>
<a href="/"><button>Home</button></a>
<a href="/profile/edit"><button>Edit Profile</button></a>
<a href="/bonsai/new"><button>Add Bonsai</button></a>
<a href="/bonsai/collection"><button>My Bonsais</button></a>

<h2>Recommended Bonsais in your Area</h2>
<% species.forEach(e => { %>
  <div class="specie-recom">
    <img src="/images/bonsais-species/<%=e.photo%>" alt="bonsais" width="200px" height="200px">
    <p><%= e.specie%></p>
    <p><%= e.scientific_name%></p>
  </div>
<%});%>
