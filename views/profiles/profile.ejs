<div class="profile">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 avatar">
        <% if(user.photo == 'logo.png'){ %>
          <img class="" src="/images/<%=user.photo%>" alt="profile-photo">
        <%} else {%>
          <img class="" src="/uploads/<%=user.photo%>" alt="profile-photo">
        <% } %>
      </div>
      <div class="col-sm-6 target">
        <div class="jumbotron">
          <h1 class="display-3">Hello <%= user.name %></h1>
          <p class="lead">Ubication: <%= user.location.city %></p>
          <hr class="my-4">
          <a href="/profile/edit"><button class="btn btn-lg btn-link">Edit Profile</button></a>
          <a href="/bonsai/new"><button class="btn btn-lg btn-link">Add Bonsai</button></a>
        </div>
      </div>
    </div>
  </div>
</div>


<h2 class ="text-center">Recommended Bonsais in your Area</h2>
<br>
<div id="recSpecies" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner myframe" role="listbox">
    <% species.forEach((e, i) => { %>
    <% if (i===0) { %>
      <div class="item active">
    <% } else { %>
      <div class="item">
    <% } %>
        <img src="/images/bonsais-species/<%=e.photo%>" alt="bonsais" width="400px" height="400px">
        <div class="carousel-caption">
          <h3 class="visible-md visible-lg"><%= e.specie%></h3>
          <p class="visible-md visible-lg"><%= e.scientific_name%></p>
        </div>
      </div>
      <%});%>
  </div>
  <a class="left carousel-control" href="#recSpecies" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span> <!--For Screen Readers-->
  </a>
   <a class="right carousel-control" href="#recSpecies" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<br>
